               <Insets left="30.0" />
            </VBox.margin></Label>
         <Label>
            <VBox.margin>
               <Insets left="30.0" />
            </VBox.margin>
         </Label>
         <Label>
            <VBox.margin>
               <Insets left="30.0" />
            </VBox.margin>
         </Label>
         <VBox.margin>
            <Insets left="20.0" />
         </VBox.margin>
        </VBox>

    </VBox>

    <VBox fx:id="rightColumn" prefHeight="700.0" prefWidth="370.0" spacing="15" GridPane.columnIndex="1">

        <VBox spacing="5">
            <Label fx:id="fullNameLabel" styleClass="cv-name">
            <VBox.margin>
               <Insets left="20.0" />
            </VBox.margin></Label>
            <Label fx:id="jobTitleLabel" styleClass="cv-title">
            <VBox.margin>
               <Insets left="30.0" />
            </VBox.margin></Label>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
        </VBox>

        <VBox spacing="5">
            <Label styleClass="cv-heading1" text="PROJECTS">
            <VBox.margin>
               <Insets left="20.0" top="20.0" />
            </VBox.margin></Label>
            <Label fx:id="aboutLabel" styleClass="cv-text1">
            <VBox.margin>
               <Insets left="30.0" />
            </VBox.margin></Label>
        </VBox>

        <VBox spacing="5">
            <Label styleClass="cv-heading1" text="WORK EXPERIENCE">
